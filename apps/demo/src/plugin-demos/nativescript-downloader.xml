<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="nativescript-downloader" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="p-20">
        <ScrollView class="h-full">
          <StackLayout class="p-20">
            <Label>
                <FormattedString>
                    <Span text="File Download Speed "/>
                    <Span text="{{fileSpeed}}"/>
                    <Span text=" bytes/s"/>
                </FormattedString>
            </Label>
            <Label>
                <FormattedString>
                    <Span text="Image Download Speed "/>
                    <Span text="{{imageSpeed}}"/>
                    <Span text=" bytes/s"/>
                </FormattedString>
            </Label>

            <Label text="File Progress"/>
            <Label text="{{fileProgress}}"/>
            <Progress value="{{fileProgress}}"/>

            <Label text="Image Progress"/>
            <Label text="{{imageProgress}}"/>
            <Progress value="{{imageProgress}}"/>

            <Image height="40%" src="{{ image }}"/>
            <Button text="Generate Downloads" tap="{{ generateDownloads }}" class="btn btn-primary"/>
            <Button text="Generate and Start Downloads" tap="{{ generateAndStart }}" class="btn btn-primary"/>
            <Button text="Download Test File" tap="{{ downloadFile }}" class="btn btn-primary"/>
            <Button text="Pause Test File" tap="{{ pauseFile }}" class="btn btn-primary"/>
            <Button text="Resume Test File" tap="{{ resumeFile }}" class="btn btn-primary"/>
            <Button text="Download Image" tap="{{ downloadImage }}" class="btn btn-primary"/>
          </StackLayout>
        </ScrollView>
    </StackLayout>
</Page>